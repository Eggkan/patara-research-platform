/* Liste Widget'ı */
QListWidget {
    background-color: #2A2C33;
    border: 1px solid #5A6070;
    selection-background-color: #4A5064; /* Seçili öğe arka planı */
    selection-color: #E6E6E6;             /* Seçili öğe metni */
}
QListWidget::item:hover {
    background-color: #3B3F4A; /* Hover rengi */
}

/* Menü Çubuğu ve Menüler */
QMenuBar {
    background-color: #3B3F4A;
    color: #E6E6E6;
    padding: 4px;
}

QMenuBar::item:selected {
    background-color: #4A5064;
}

QMenu {
    background-color: #3B3F4A;
    border: 1px solid #5A6070;
    color: #E6E6E6;
}

QMenu::item:selected {
    background-color: #4A5064;
}

/* Durum Çubuğu */
QStatusBar {
    background-color: #3B3F4A;
    color: #BBDEF0; /* Daha yumuşak bir mavi tonu */
    font-style: italic;
    padding: 3px;
}

/* Tablo Başlıkları */
QHeaderView::section {
    background-color: #3B3F4A;
    color: #E6E6E6;
    padding: 5px;
    border: 1px solid #5A6070;
}

/* Özel renkler (QColor ile kullanılanlar) */
/* Koyu temada daha iyi görünen renkler */
QLabel { /* Genel label rengini override edebilir */
    color: #E6E6E6;
}
QLabel[styleSheet*="color: #0055A4;"] { /* Detay paneli ID */
    color: #79BAFF; /* Daha açık mavi */
}
QLabel[styleSheet*="color: #2E8B57;"] { /* Detay paneli Başarı Yeşil */
    color: #85E085; /* Daha açık yeşil */
}
QLabel[styleSheet*="color: #B22222;"] { /* Detay paneli Predasyon Kırmızı */
    color: #FF7070; /* Daha açık kırmızı */
}

/* Simülasyon tablosu renklendirmesi */
QTableWidget::item {
    color: #E6E6E6; /* Varsayılan metin rengi */
}
QTableWidget::item:selected {
    background-color: #4A5064;
    color: #E6E6E6;
}
/* Bu QColor ile kodda doğrudan atanan renkleri override etmez, ama genel tablonun metin rengi bu olur */
/* Kod içindeki QColor('#28A745') ve QColor('#DC3545') değerleri doğrudan uygulanmaya devam eder */