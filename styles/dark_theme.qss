/* dark_theme.qss - Modern Koyu Tema */

/* Genel Widget Ayarları */
QWidget {
    background-color: #2F323A; /* Ana koyu gri */
    color: #E6E6E6;            /* Açık gri metin */
    font-size: 10pt;
    font-family: "Segoe UI", "Helvetica Neue", Helvetica, Arial, sans-serif; /* Daha modern font */
}

/* Ana Pencere ve Diyaloglar */
QMainWindow, QDialog {
    background-color: #2F323A;
}

/* Grup Kutuları (GroupBox) */
QGroupBox {
    background-color: #3B3F4A; /* Grup kutusu arka planı, ana arka plandan biraz daha açık */
    border: 1px solid #5A6070; /* Yumuşak kenar */
    border-radius: 6px;        /* Hafif yuvarlak köşeler */
    margin-top: 1ex;
    font-weight: bold;
    color: #F0F0F0;            /* Başlık metni */
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top center;
    padding: 0 4px;
    background-color: #3B3F4A;
    border-radius: 4px;
}

/* Butonlar */
QPushButton {
    background-color: #4A5064; /* Normal buton arka planı */
    border: 1px solid #6A728A; /* Normal buton kenarı */
    padding: 7px 12px;         /* Daha fazla dolgu */
    border-radius: 4px;        /* Yuvarlak köşeler */
    color: #F0F0F0;
    min-width: 90px;           /* Minimum genişlik */
}

QPushButton:hover {
    background-color: #5A6070; /* Hover rengi */
    border-color: #8C94A6;
}

QPushButton:pressed {
    background-color: #3B3F4A; /* Basıldığında rengi */
    border-color: #9BA4B8;
}

QPushButton:disabled {
    background-color: #3A3D44;
    border-color: #4A4E58;
    color: #6C707A;
}

/* Giriş Kutuları, Açılır Menüler, Tarih Seçiciler ve Tablolar */
QLineEdit, QComboBox, QDateEdit, QTableWidget {
    background-color: #2A2C33; /* Daha koyu giriş arka planı */
    border: 1px solid #5A6070;
    padding: 4px;
    border-radius: 4px;
    color: #E6E6E6;
}

/* Açılır Menü Okları */
QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 20px;
    border-left: 1px solid #5A6070;
    border-top-right-radius: 3px;
    border-bottom-right-radius: 3px;
}
